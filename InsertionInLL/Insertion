/*
 * WAP to Implement Singly Linked List with operations:
 * a) Create a linked list.
 * b) Insertion (first, any position, end).
 * c) Display the list.
 */

#include <stdio.h>
#include <stdlib.h> // Required for malloc and exit

// --- 1. Define the Node Structure ---
// This is the blueprint for each element in the list
struct Node {
    int data;           // The data value stored in the node
    struct Node* next;  // A pointer to the next node in the list
};

// Use typedef to make 'struct Node' just 'Node' for convenience
typedef struct Node Node;


// --- Helper Function: Create a New Node ---
// This function allocates memory for a new node and initializes it
Node* createNode(int data) {
    // 1. Allocate memory
    Node* newNode = (Node*)malloc(sizeof(Node));

    // 2. Check if memory allocation failed
    if (newNode == NULL) {
        printf("Error: Memory allocation failed!\n");
        exit(1); // Exit the program if malloc fails
    }

    // 3. Initialize the node
    newNode->data = data;
    newNode->next = NULL; // New node always points to NULL initially
    return newNode;
}


// --- Operation: Insertion at First Position ---
Node* insertAtFirst(Node* head, int data) {
    // 1. Create the new node
    Node* newNode = createNode(data);
    
    // 2. Point the new node's 'next' to the current head
    newNode->next = head;
    
    // 3. The new node is now the new head of the list
    // Return the new head
    return newNode;
}


// --- Operation: Insertion at the End ---
Node* insertAtEnd(Node* head, int data) {
    // 1. Create the new node
    Node* newNode = createNode(data);

    // 2. Handle the case where the list is empty
    if (head == NULL) {
        // If the list is empty, the new node is the head
        return newNode;
    }

    // 3. If the list is not empty, traverse to the end
    Node* temp = head;
    while (temp->next != NULL) {
        temp = temp->next; // Move to the next node
    }

    // 4. 'temp' now points to the last node
    // Link the last node to the new node
    temp->next = newNode;

    // 5. Return the original head (it hasn't changed)
    return head;
}


// --- Operation: Insertion at Any Position ---
// Note: Position 1 is the first node.
Node* insertAtPos(Node* head, int data, int pos) {
    // 1. Check for invalid position
    if (pos < 1) {
        printf("Invalid position. Position must be 1 or greater.\n");
        return head;
    }

    // 2. If pos is 1, it's the same as insertAtFirst
    if (pos == 1) {
        return insertAtFirst(head, data);
    }

    // 3. For pos > 1, create the node and find the insertion point
    Node* newNode = createNode(data);
    Node* temp = head;

    // 4. Traverse to the (pos-1)th node
    // We stop at the node *before* the desired position
    for (int i = 1; i < pos - 1; i++) {
        // Check if we reached the end of the list too early
        if (temp == NULL) {
            printf("Invalid position. Position %d is out of bounds.\n", pos);
            free(newNode); // Free the unused node
            return head;
        }
        temp = temp->next;
    }

    // 5. Check again if the position was valid (e.g., list was empty but pos > 1)
    if (temp == NULL) {
        printf("Invalid position. Position %d is out of bounds.\n", pos);
        free(newNode);
        return head;
    }

    // 6. Perform the insertion
    // 'temp' is at the (pos-1)th node
    newNode->next = temp->next; // New node points to the rest of the list
    temp->next = newNode;      // (pos-1)th node points to the new node
    
    return head;
}


// --- Operation: Display the Linked List ---
void display(Node* head) {
    if (head == NULL) {
        printf("List is empty.\n");
        return;
    }

    Node* temp = head;
    printf("List contents: ");
    while (temp != NULL) {
        printf("%d -> ", temp->data); // Print data
        temp = temp->next;           // Move to next node
    }
    printf("NULL\n"); // Indicate the end of the list
}


// --- Helper Function: Free all memory ---
void freeList(Node* head) {
    Node* temp;
    while (head != NULL) {
        temp = head;         // Store current node
        head = head->next;   // Move to next node
        free(temp);          // Free the stored node
    }
}


// --- Main Function with Menu ---
int main() {
    // "Create a linked list" starts here. The list is initially empty.
    Node* head = NULL; 
    int choice, data, pos;

    // Run an infinite loop for the menu
    while (1) {
        printf("\n--- Singly Linked List Menu ---\n");
        printf("1. Insert at First\n");
        printf("2. Insert at End\n");
        printf("3. Insert at Any Position\n");
        printf("4. Display List\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter data to insert at first: ");
                scanf("%d", &data);
                head = insertAtFirst(head, data);
                display(head);
                break;

            case 2:
                printf("Enter data to insert at end: ");
                scanf("%d", &data);
                head = insertAtEnd(head, data);
                display(head);
                break;

            case 3:
                printf("Enter data: ");
                scanf("%d", &data);
                printf("Enter position (1-based): ");
                scanf("%d", &pos);
                head = insertAtPos(head, data, pos);
                display(head);
                break;

            case 4:
                display(head);
                break;

            case 5:
                printf("Exiting... Freeing all memory.\n");
                freeList(head); // Good practice: free memory before exiting
                exit(0);

            default:
                printf("Invalid choice. Please try again.\n");
        }
    }

    return 0; // This line is never reached
}
